@model EditPermissionViewModel

@{
    ViewData["Title"] = "Edit";
}


<h2>Editar Permisos de Usuario</h2>

@foreach (var item in Model.Permisos ) {
    @Html.DisplayFor(modelItem => item.Nombre)
}

<form>
  <input type="hidden" asp-for="Id" />
  <div class="row">
      <div class="col-md-4">
          <select class="form-select" name="PermisoId" aria-label="Seleccione un permiso para agregar">
            @foreach (var item in Model.PermisosDisponibles ) {
                <option value={{ item.id }}>{{ item.nombre }}</option>
            }
          </select>
      </div>
      <div class="col-md-4">
          <div class="form-group">
              <input type="submit" value="Agregar" class="btn btn-primary align-bottom" />
          </div>
      </div>
  </div>
</form>